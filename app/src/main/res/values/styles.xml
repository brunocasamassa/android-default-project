<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/shape_custom_background_border_grey</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingBottom">12dp</item>

    </style>

    <style name="style_search_view_products" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/grey_500</item>
        <item name="android:background" >@drawable/rounded_no_border</item>
    </style>

    <style name="style_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_custom_background_border_black</item>
    </style>

    <style name="style_radio_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/selector_custom_background_radiobutton</item>
        <item name="android:textColor">@drawable/selector_custom_radioflat</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="style_radio_button_product">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/selector_custom_background_radiobutton_uncheck</item>
        <item name="android:textColor">@drawable/selector_custom_radioflat_produto</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="style_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_custom_background_border_grey</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingBottom">12dp</item>

    </style>

    <style name="style_search_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/shape_custom_background_border_white</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/principal_200</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/principal_200</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>