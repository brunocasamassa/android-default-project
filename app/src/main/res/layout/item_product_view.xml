<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseCardProductView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="3.5dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="3.5dp"
    android:layout_marginBottom="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageProductView"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:padding="4dp"
            android:src="@drawable/ic_logo_leao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/productTitleView"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:maxWidth="160dp"
            android:maxLines="2"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageProductView"
            android:text="Chá mate leão" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/descriptionView"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/margin_4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/productTitleView"
            tools:text="R$ 3,98" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:textColor="@color/principal"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionView"
            android:text="R$ 1,99 /un" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
